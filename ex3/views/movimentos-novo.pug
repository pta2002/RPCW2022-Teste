extends layout

block content
  form(method='post').grid.grid-cols-2.gap-4
    label(for='descricao') Descrição
    input.border-2#descricao(type='text' name='descricao')
    label(for='valor') Valor
    input.border-2#valor(type='number' name='valor')
    label(for='data') Data
    input.border-2#data(type='date' name='data')
    label(for='tipo') Tipo
    select.border-2#tipo(name='tipo')
      option(value='Receita') Receita
      option(value='Despesa') Despesa
    button.bg-blue-500.text-white.py-2.px-4.rounded.shadow.hover_bg-blue-600.transition-all.duration-200.col-span-2(type='submit') Adicionar
